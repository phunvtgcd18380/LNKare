@model IEnumerable<LNkareWeb.Models.Product>

<div class="row pb-3 backgroundWhite">

    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2 ">
                <div class="col-12  p-1" style="border:3px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        @foreach (var item in product.Imgage)
                        {
                            if (item.ToLower().Contains("coverpage"))
                            {
                                <img src="@item" style="height:300px" class="card-img-top rounded" />
                            }
                        }
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50">@product.Name</b></p>
                            <p class="card-title text-primary">by <b>@product.Category.Name</b></p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">Detail</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>